<?xml version="1.0" encoding="utf-8" ?>
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">
  <CommandSet xml:lang="en-us" Name="ToDoCommandSet_en-us">

    <AppName> Hey </AppName>
    <Example> Hey, What to do today ? </Example>

    <Command Name="ToDoFetcher">
      <Example>What to do today ?</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">What to do {date}</ListenFor>
      <ListenFor >What to do {date}</ListenFor>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">What you do {date}</ListenFor>
      <ListenFor >What you do {date}</ListenFor>
      <Feedback>Fetching your {date} To do List</Feedback>
      <VoiceCommandService Target="Bgcommand" />
    </Command>
    <Command Name="HobbyFetcher">
      <Example>What are my hobbies ?</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">What are my hobbies</ListenFor>
      <ListenFor >What are my hobbies</ListenFor>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">What is my hobby</ListenFor>
      <Feedback>Fetching your hobbies</Feedback>
      <VoiceCommandService Target="Bgcommand" />
    </Command>
    <Command Name="HobbyCounter">
      <Example>How much hobbies do I have?</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">How much hobbies do I have</ListenFor>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Count my hobbies</ListenFor>
      <Feedback>Fetching your hobbies</Feedback>
      <VoiceCommandService Target="Bgcommand" />
    </Command>
    <Command Name="TodoCounter">
      <Example>How much tasks do I have ?</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">How much tasks do i have</ListenFor>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">How much task do i have</ListenFor>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">How much tasks shall i do</ListenFor>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">How much tasks should i do</ListenFor>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Count my tasks</ListenFor>
      <Feedback>Fetching your Tasks</Feedback>
      <VoiceCommandService Target="Bgcommand" />
    </Command>
    <Command Name="addtask">
      <Example>Add a task</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Add a task</ListenFor>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Create a task</ListenFor>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Add a todo</ListenFor>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Create a todo</ListenFor>
      <Feedback>Openning the app</Feedback>
      <VoiceCommandService Target="Bgcommand" />
    </Command>
    <Command Name="addhobby">
      <Example>Add a hobbby?</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Add a hobby</ListenFor>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Create a hobby</ListenFor>
      <Feedback>openning the app</Feedback>
      <VoiceCommandService Target="Bgcommand" />
    </Command>
    <Command Name="getperformance">
      <Example>What's my performance?</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">get my performance</ListenFor>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">How good where I</ListenFor>
      <Feedback>Collecting information</Feedback>
      <VoiceCommandService Target="Bgcommand" />
    </Command>
    <PhraseList Label="date">
      <Item>today</Item>
    </PhraseList>

  </CommandSet>
</VoiceCommands>