<Page
    x:Class="Planel.Views.fhome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Planel.Views"
    xmlns:pieCharts="using:Planel.PieCharts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid>
        <pieCharts:PieChart Percentage="70"
                            Radius="100"
                            BackgroundColor="Transparent"
                            Segment360Color="Gray"
                            SegmentColor="{StaticResource SystemControlBackgroundAccentBrush}"
                            StrokeThickness="15" />

        <TextBlock Text="70%"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       FontSize="50"
                       Foreground="Gray" />
    </Grid>
</Grid>
</Page>
