<Page
    x:Class="Planel.Views.sframes.add"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Planel.Views.sframes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Margin="0,0,0,48">
        <StackPanel>
            <TextBox TextAlignment="Justify" PlaceholderText="Title"  Margin="5,10,5,0" Height="40" VerticalAlignment="Top" />
            <TextBox TextAlignment="Justify" PlaceholderText="Describtion"  Margin="5,10,5,0" Height="80" VerticalAlignment="Top" />

            <TextBlock  Margin="5,15,5,0" Text="Time:" />
            <DatePicker  Margin="5,10,5,0" />
            <TimePicker Margin="5,10,5,0" />
            <StackPanel Orientation="Horizontal" >
            <CheckBox Margin="5,10,5,0" Content="Allday" />
            <CheckBox Margin="5,10,5,0" Content="Important" />
        </StackPanel>

        </StackPanel>
            
    </Grid>
        <CommandBar  VerticalAlignment="Bottom">





            <AppBarButton Content="Save"   >

                <AppBarButton.Icon>
                    <FontIcon Margin="0,-14,0,-15" FontFamily="Segoe MDL2 Assets" Glyph="&#xE74E;"  Height="49" VerticalAlignment="Top"/>
                </AppBarButton.Icon>
            </AppBarButton>

            <AppBarButton Content="Delete" >

                <AppBarButton.Icon>
                    <FontIcon Margin="0,-14,0,-15" FontFamily="Segoe MDL2 Assets" Glyph="&#xE74D;"  Height="49" VerticalAlignment="Top"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <CommandBar.SecondaryCommands>
                <AppBarButton Icon="Like" Label="About"/>
            </CommandBar.SecondaryCommands>



        </CommandBar>
    </Grid>
</Page>
