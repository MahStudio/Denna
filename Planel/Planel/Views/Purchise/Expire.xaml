<Page
    x:Class="Planel.Views.Expire"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Planel.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Image  VerticalAlignment="Bottom" HorizontalAlignment="Left" Source="/Assets/Headings/h4.png" Stretch="UniformToFill"      />
        </Grid>
        <StackPanel HorizontalAlignment="Center" >
        <TextBlock Margin="0,50,0,0" FontWeight="Bold" FontSize="40" Text="EXPIRED :(" Foreground="{StaticResource SystemControlBackgroundAccentBrush}" />
            <HyperlinkButton x:Name="Buy" Content="Buy from Store" HorizontalAlignment="Center"  VerticalAlignment="Bottom" FontSize="30"   Foreground="{StaticResource SystemControlBackgroundAccentBrush}" Click="logout_Click" Margin="0,20,0,0"/>
            <HyperlinkButton x:Name="Iran" Content="I'm From IRAN" HorizontalAlignment="Center"  VerticalAlignment="Bottom" FontSize="30"   Foreground="{StaticResource SystemControlBackgroundAccentBrush}" Click="Iran_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
