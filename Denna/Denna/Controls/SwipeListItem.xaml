<UserControl
    x:Class="Denna.Controls.SwipeListItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Denna.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="60"
    d:DesignWidth="500"
    >
   
    <UserControl.Resources>
        <Storyboard x:Name="urStoryboard">

            <DoubleAnimation To="0" Duration="00:00:00.8" 
                Storyboard.TargetName="myScaleTransform" 
                Storyboard.TargetProperty="X">
                <DoubleAnimation.EasingFunction>
                    <BackEase Amplitude="0.3" EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>
    <Grid>
        <Grid >
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="60"/>

            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0"  >
                <Button Background="{x:Bind LeftFirstColor}" Foreground="{x:Bind LeftFirstForeground}"
                Content="{x:Bind LeftFirstContent}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

            </Grid>
            <Grid Grid.Column="2"  >
                <Button Background="{x:Bind RightFirstColor}" Foreground="{x:Bind RightFirstForeground}"
                Content="{x:Bind RightFirstContent}" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />


            </Grid>
            <Grid Grid.Column="3"  >
                <Button Background="{x:Bind RightSecondColor}" Foreground="{x:Bind RightSecondForeground}"
                Content="{x:Bind RightSecondContent}" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
            </Grid>
            <Grid Grid.Column="4"  >
                <Button Background="{x:Bind RightThirdColor}" Foreground="{x:Bind RightThirdForeground}"
                Content="{x:Bind RightThirdContent}" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
            </Grid>
        </Grid>
        <Grid x:Name="MainGrid" Opacity="1" Background="Azure"
         ManipulationMode="TranslateX" ManipulationDelta="MainGrid_ManipulationDelta" ManipulationCompleted="MainGrid_ManipulationCompleted"
         ManipulationStarted="MainGrid_ManipulationStarted"
            
         >
            
            
            <Grid.RenderTransform >

                <TranslateTransform  x:Name="myScaleTransform" />
            </Grid.RenderTransform>
        </Grid>
    </Grid>
</UserControl>
