<Page
    x:Class="Denna.Views.Sign.Up"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Denna.Views.Sign"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:Denna.Controls">

    <StackPanel Background="White">
        <controls:TemplatedTextBox Margin="10,40,10,0" Height="35" Glyph="" PlaceHolder="Username" />
        <controls:TemplatedTextBox Margin="10,10,10,0" Height="35" Glyph="" PlaceHolder="Email" />
        <controls:TemplatedTextBox Margin="10,10,10,0" Height="35" Glyph="" PlaceHolder="First name" />
        <controls:TemplatedTextBox Margin="10,10,10,0" Height="35" Glyph="" PlaceHolder="Last name" />

        <controls:TemplatedPasswordBox
                PlaceHolder="Password" Glyph="" Margin="10,10,10,0" Height="35"  />
        <controls:TemplatedPasswordBox
                PlaceHolder="Retype password" Glyph="" Margin="10,10,10,0" Height="35"  />
        <Button HorizontalAlignment="Stretch" Content="LOGIN" Margin="40,20,40,0" Height="35" Style="{StaticResource goitstyle}"/>
        <HyperlinkButton Margin="10,30,10,0" HorizontalAlignment="Stretch" Content="Do not have an account? SIGN UP" />
    </StackPanel>
</Page>
